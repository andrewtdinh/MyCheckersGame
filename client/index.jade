doctype html
html
  head
    meta(charset='utf-8')      
    title Andrew Alien Checkers
    link(rel='stylesheet', href='/vendor/font-awesome/css/font-awesome.min.css')
    link(rel='stylesheet', href=isProd ? '/index.min.css' : '/index.css')
    link(rel='shortcut icon', href='/favicon.ico')
  body
    h2#title Which alien race will take control of the world?  You decide with the game of alien checkers!!!
    
    #controls
      button#reset Reset board
      button#start Start a new game
      
    #players
      #p1.player
      #p2.player
        
    table#board
      - var values = [0, 1, 2, 3, 4, 5, 6, 7]
      tbody
        each row in values
          tr(data-row = row)
            each col in values
              -var zone = ''
              if (row + col) % 2
                -var zone = 'valid'
              td(class= zone data-x = col data-y = row)
    
    script(src='/vendor/jquery/dist/jquery.min.js')
    script(src='/vendor/lodash/lodash.min.js')
    script(src=isProd ? '/index.min.js' : '/index.js')
